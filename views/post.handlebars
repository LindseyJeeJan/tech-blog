<div class="card bg-info mt-2">
    <div class="card-header text-white">
        {{title}}
    </div>
    <div class="card-body bg-light">
        <h5 class="card-title">{{content}}</h5>
        <div class="text-right">
            <small class="card-text">Posted by {{user.username}} on {{format_date date_created}}</small>
        </div>
    </div>
</div>

<div class="card bg-info mt-2">
    <div class="card-header text-white">
        &nbsp;
    </div>
    <div class="card-body bg-light">
        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-comment">Comment</label>
                <textarea class="form-input form-control" placeholder="Enter post comment" id="post-comment" name="post-comment"></textarea>
            </div>
            <div class="text-center">
                <button id="btn-submit" type="submit" class="btn btn-info">Submit</button>
            </div>
        </form>
    </div>
</div>