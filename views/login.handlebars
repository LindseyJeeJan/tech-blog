<div class="row login">
    <div class="col-sm-6 bg-light p-5">
        <h2 class="mb-4">Existing Account Login</h2>
        <form class="form login-form">
            <div class="form-group">
                <label for="username-login">Username</label>
                <input class="form-input form-control" placeholder="Enter username" type="text" id="username-login" />
            </div>
            <div class="form-group">
                <label for="password-login">Password</label>
                <input class="form-input form-control" placeholder="Enter password" type="password" id="password-login" />
            </div>
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit">Login</button>
            </div>
        </form>
    </div>
    <div class="col-sm-1">&nbsp;</div>
    <div class="col-sm-5 bg-light p-5">
        <h2 class="mb-4">Sign Up</h2>
        <form class=" form signup-form">
            <div class="form-group">
                <label for="username-signup">Userame</label>
                <input class="form-input form-control" placeholder="Enter Username" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input class="form-input form-control" placeholder="Enter password" type="password" id="password-signup" />
            </div>
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>