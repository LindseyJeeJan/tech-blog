<div class="row justify-content-center login">
    <div id="login-form" class="col-sm-6 bg-light p-5 rounded">
        <h2 class="mb-4">Login</h2>
        <form class="form login-form mt-5">
            <div class="form-group">
                <label for="username-login">Username</label>
                <input class="form-input form-control" placeholder="Enter your username" type="text" id="username-login" />
            </div>
            <div class="form-group">
                <label for="password-login">Password</label>
                <input class="form-input form-control" placeholder="Enter your password" type="password" id="password-login" />
            </div>
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit">Login</button>
            </div>
        </form>
        <div class="text-left">
            <button id="signup-btn" class="btn-link">Sign up instead</button>
        </div>
    </div>
    <div id="signup-form" style="display: none;" class="col-sm-6 bg-light p-5 rounded">
        <h2 class="mb-4">Sign Up</h2>
        <form class=" form signup-form mt-5">
            <div class="form-group">
                <label for="username-signup">Username</label>
                <input class="form-input form-control" placeholder="Enter a new username" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input class="form-input form-control" placeholder="Enter a new password" type="password" id="password-signup" />
            </div>
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit">Sign Up</button>
            </div>
            <div class="text-left">
                <button id="login-btn" class="btn-link">Login instead</button>
            </div>
        </form>
    </div>
</div>
